<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.lym.searchlayout.MainActivity">

    <com.example.lym.searchlayout.SearchLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_identity_textedit_bg"
        app:input_Color="@color/colorPrimaryDark"
        app:input_Hint="第一次测试"
        app:input_Hint_Size="10sp"
        app:input_Hint_color="@color/colorAccent"
        app:input_Size="13sp"
        app:tag_src="@drawable/ic_search"/>

    <com.example.lym.searchlayout.SearchLayout
        android:id="@+id/searchLayout1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_identity_textedit_bg"
        android:paddingLeft="15dp"
        app:tag_text="通用名："/>

    <com.example.lym.searchlayout.SearchLayout
        android:id="@+id/searchLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_identity_textedit_bg"
        app:input_Hint="@string/app_name"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/details_top_bar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_search"/>

        <com.example.lym.searchlayout.SearchLayout
            android:id="@+id/searchLaout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_identity_textedit_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:input_Color="@color/colorAccent"
            app:input_Hint="输入要搜索的内容"
            app:input_Hint_Size="14sp"
            app:input_Hint_color="@color/colorPrimaryDark"
            app:input_Size="14sp"
            app:tag_src="@drawable/ic_search"/>


        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="搜索"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show"/>

    <Button
        android:id="@+id/hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hide"/>

</LinearLayout>
